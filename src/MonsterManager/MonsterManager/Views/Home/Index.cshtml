@model IEnumerable<ApplicationCore.Entities.Monster>


@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>

    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/monster1.png" alt="monster 1" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h3>Monsters!</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/monster2.png" alt="monster 2" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h3>Monsters!</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/monster3.jpg" alt="monster 3" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h3>And More Monsters!</h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/monster4.png" alt="monster 4" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h3>Aaahhhh!!!</h3>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">

    </div>
    <div id="profile-list" class="col-md-4">
        <h4>Monster Profiles</h4>
        <ul>
        @foreach (var item in Model)
        {
            <li> @Html.ActionLink(item.Name, "Profile", new { id = item.Id }) </li>

        }
            </ul>
    </div>
    <div class="col-md-4">
    </div>

</div>
